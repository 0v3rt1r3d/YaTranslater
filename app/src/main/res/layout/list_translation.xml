<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="60dp"
                                             android:padding="8dp">

  <ImageButton
    android:id="@+id/list_translation_button_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="8dp"
    android:src="@drawable/ic_bookmark"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/list_translation_text_direction"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:textAllCaps="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/list_translation_text_from"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:lines="1"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:text="Test"
    android:textColor="@android:color/black"
    android:textSize="20sp"
    app:layout_constraintLeft_toRightOf="@+id/list_translation_button_save"
    app:layout_constraintRight_toLeftOf="@+id/list_translation_text_direction"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/list_translation_text_to"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:lines="1"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/list_translation_button_save"
    app:layout_constraintRight_toLeftOf="@+id/list_translation_text_direction"
    app:layout_constraintTop_toBottomOf="@+id/list_translation_text_from"/>

</android.support.constraint.ConstraintLayout>