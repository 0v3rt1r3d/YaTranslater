<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/list_dictionary_text_view_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <com.google.android.flexbox.FlexboxLayout
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/list_dictionary_text_view_number"
    app:layout_constraintRight_toRightOf="parent"
    app:flexDirection="row"
    app:flexWrap="wrap"
    app:alignContent="flex_start"
    android:id="@+id/list_dictionary_flexbox_synonyms"
    android:layout_width="0dp"
    android:layout_height="wrap_content"/>

  <com.google.android.flexbox.FlexboxLayout
    android:layout_marginLeft="8dp"
    app:flexDirection="row"
    app:flexWrap="wrap"
    app:alignContent="flex_start"
    app:layout_constraintTop_toBottomOf="@+id/list_dictionary_flexbox_synonyms"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/list_dictionary_flexbox_means"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"/>

  <com.google.android.flexbox.FlexboxLayout
    android:padding="8dp"
    app:flexDirection="column"
    app:flexWrap="wrap"
    app:alignContent="flex_start"
    app:layout_constraintTop_toBottomOf="@+id/list_dictionary_flexbox_means"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/list_dictionary_flexbox_examples"
    android:layout_width="0dp"
    android:layout_height="wrap_content">

  </com.google.android.flexbox.FlexboxLayout>

</android.support.constraint.ConstraintLayout>