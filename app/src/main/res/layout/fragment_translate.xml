<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

  <EditText
    android:id="@+id/field_for_translate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:hint="@string/hint_for_translater_field"
    />

  <Button
    android:id="@+id/button_translate"
    android:text="Translate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/field_for_translate"/>

  <TextView
    android:id="@+id/translated_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Результат перевода"
    app:layout_constraintTop_toBottomOf="@id/button_translate"
    app:layout_constraintBottom_toBottomOf="parent"/>

