<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical">

  <RelativeLayout
    android:id="@+id/toolbar_translate"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorPrimary"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">


      <ImageButton
        android:id="@+id/swap_languages_button"
        style="@style/AppBarTitle"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_change_languages"/>

      <TextView
        android:id="@+id/from_language_text_view"
        style="@style/AppBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/swap_languages_button"
        />


      <TextView
        android:id="@+id/to_language_text_view"
        style="@style/AppBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/swap_languages_button"
        />

  </RelativeLayout>

  <EditText
    android:id="@+id/field_for_translate"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="top"
    android:hint="@string/hint_for_translater_field"
    android:inputType="textLongMessage"
    android:padding="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar_translate"
    />

  <Button
    android:id="@+id/button_translate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Translate"
    app:layout_constraintTop_toBottomOf="@id/field_for_translate"/>

  <ImageButton
    android:padding="8dp"
    android:id="@+id/button_bookmark"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_bookmark"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/button_translate"/>

  <TextView
    android:padding="8dp"
    android:id="@+id/translated_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="BLABLABLABLABLABLABLABLA"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/button_translate"
    app:layout_constraintRight_toRightOf="@id/button_bookmark"/>


